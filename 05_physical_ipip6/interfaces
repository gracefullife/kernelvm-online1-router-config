allow-hotplug enp1s0
iface enp1s0 inet static
      address 192.168.1.1
      netmask 255.255.255.0
iface enp1s0 inet6 auto
      accept_ra 0
      dhcp 0

allow-hotplug enp3s0
iface enp3s0 inet manual
iface enp3s0 inet6 static
      address 2001:db8:dead:beaf::2
      netmask 64
      accept_ra 0
      dhcp 0
